@*@model IEnumerable<SearchingSortingPaging.Models.Category>*@
@using PagedList;
@using PagedList.Mvc;
@model IPagedList<SearchingSortingPaging.Models.Category>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New Category", "Create")
</p>
<table class="table">
    <tr>
        <th colspan="2">
            @using (Html.BeginForm("Index", "Category", FormMethod.Get))    
            {
                <p>
                    Search: @Html.TextBox("SearchString")
                    <input type="submit" name="submit" value="Search" class="btn btn-default" />
                </p>
            }
        </th>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Name)
        </th>
        <th></th>
    </tr>
    @{
        if (Model.Count() == 0)
        {
            <tr>
                <th colspan="2">
                    Category no found..
                </th>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        }
    }
</table>
@Html.PagedListPager(Model, pageNumber => Url.Action("Index", new { pageNumber, SearchString = Request.QueryString["SearchString"] }))
